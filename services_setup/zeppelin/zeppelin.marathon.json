{
  "id": "zeppelin",
  "cmd": "/usr/local/sbin/inContainerStartService.sh",
  "cpus": 0.5,
  "mem": 2500,
  "disk": 800,
  "instances": 1,
  "container": {
    "docker": {
      "image": "marathon.registry:5000/zeppelin",
      "forcePullImage": true,
      "privileged": true,
      "parameters": [
        { "key": "user", "value": "spark" }
      ]
    },
    "type": "DOCKER",
    "network": "HOST",
    "portMappings": [
      {
        "containerPort": 38080,
        "hostPort": 31008,
        "protocol": "tcp",
        "name": "httpzeppelin1",
        "labels": null
      },
      {
        "containerPort": 38081,
        "hostPort": 31009,
        "protocol": "tcp",
        "name": "httpzeppelin2",
        "labels": null
      }
    ],
    "volumes": [
      {
        "containerPath": "/var/log/spark/",
        "hostPath": "/var/log/spark",
        "mode": "RW"
      },
      {
        "containerPath": "/var/run/spark/",
        "hostPath": "/var/run/spark",
        "mode": "RW"
      },
      {
        "hostPath": "/etc/eskimo_topology.sh",
        "containerPath": "/etc/eskimo_topology.sh",
        "mode": "RO"
      },
      {
        "hostPath": "/etc/eskimo_services-config.json",
        "containerPath": "/etc/eskimo_services-config.json",
        "mode": "RO"
      },
      {
        "hostPath": "/usr/local/lib",
        "containerPath": "/usr/local/host_lib",
        "mode": "RO"
      }
    ]
  },
  "networks": [
    {
      "mode": "host"
    }
  ],
  "env": {},
  "labels": {},
  "healthChecks": [
    {
      "protocol": "MESOS_TCP",
      "port": 38080,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 80,
      "timeoutSeconds": 40,
      "maxConsecutiveFailures": 4
    }
  ],
  "user": "spark"
}