{
  "id": "kafka-manager",
  "cmd": "/usr/local/sbin/inContainerStartService.sh",
  "cpus": 0.1,
  "mem": 300,
  "disk": 100,
  "instances": 1,
  "container": {
    "docker": {
      "image": "marathon.registry:5000/kafka-manager",
      "forcePullImage": true,
      "parameters": [
        { "key": "user", "value": "kafka" }
      ]
    },
    "type": "DOCKER",
    "network": "BRIDGE",
    "portMappings": [
      {
        "containerPort": 22080,
        "hostPort": 31220,
        "protocol": "tcp",
        "name": "httpkafkamanager",
        "labels": null
      }
    ],
    "volumes": [
      {
        "containerPath": "/var/log/kafka",
        "hostPath": "/var/log/kafka",
        "mode": "RW"
      },
      {
        "hostPath": "/var/lib/kafka",
        "containerPath": "/var/lib/kafka",
        "mode": "RW"
      },
      {
        "hostPath": "/etc/eskimo_topology.sh",
        "containerPath": "/etc/eskimo_topology.sh",
        "mode": "RO"
      },
      {
        "hostPath": "/etc/eskimo_services-config.json",
        "containerPath": "/etc/eskimo_services-config.json",
        "mode": "RO"
      }
    ]
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "env": {},
  "labels": {},
  "healthChecks": [
    {
      "protocol": "MESOS_TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 30,
      "maxConsecutiveFailures": 4
    }
  ],
  "user": "kafka"
}