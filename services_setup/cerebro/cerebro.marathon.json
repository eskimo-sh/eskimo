{
  "id": "cerebro",
  "cmd": "/usr/local/sbin/inContainerStartService.sh",
  "cpus": 0.1,
  "mem": 300,
  "disk": 100,
  "instances": 1,
  "container": {
    "docker": {
      "image": "marathon.registry:5000/cerebro",
      "forcePullImage": true,
      "parameters": [
        { "key": "user", "value": "elasticsearch" }
      ]
    },
    "type": "DOCKER",
    "network": "BRIDGE",
    "portMappings": [
      {
        "containerPort": 9000,
        "hostPort": 31900,
        "protocol": "tcp",
        "name": "httpcerebro",
        "labels": null
      }
    ],
    "volumes": [
      {
        "containerPath": "/var/log/elasticsearch",
        "hostPath": "/var/log/elasticsearch",
        "mode": "RW"
      },
      {
        "hostPath": "/var/run/elasticsearch",
        "containerPath": "/var/run/elasticsearch",
        "mode": "RW"
      },
      {
        "hostPath": "/etc/eskimo_topology.sh",
        "containerPath": "/etc/eskimo_topology.sh",
        "mode": "RO"
      },
      {
        "hostPath": "/etc/eskimo_services-config.json",
        "containerPath": "/etc/eskimo_services-config.json",
        "mode": "RO"
      }
    ]
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "env": {},
  "labels": {},
  "healthChecks": [
    {
      "protocol": "MESOS_TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "user": "elasticsearch"
}